<Window x:Class="DPSI_lab_1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsWindow" Height="300" Width="300" Loaded="Window_Loaded_1">
    <Grid>
        <StackPanel  Margin="30, 60" >
            <CheckBox Name="AutoTreshhold" Content="Auto Treshhold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,134,0" Click="AutoTreshhold_Click" />
            <TextBox Name="TreshholdTextBox" Height="23" TextWrapping="Wrap" Text="" />
            <Label Content="K:"/>
            <TextBox Name="KTextBox" Height="23" TextWrapping="Wrap" Text=""/>
            <CheckBox Name="InversionCheckBox" Content="Inversion"/>
        </StackPanel>
        <Button Width="100"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="OK" Margin="30,30" Click="Button_Click_1"/>
    </Grid>
</Window>
